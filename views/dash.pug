extends ./layouts/main.pug

block content
  h1 My Notes
  table.table.table-striped
    thead
      tr
        th &nbsp;
        th ID
        th Age
        th Credit Trend
        th Grade
        th Rate
        th Principle Left
        th Accurred Interest
        th Interest Accumulated
    tbody
      each note in notes
        tr
          td
            input(type="checkbox")
          td
            a(
              href="https://www.lendingclub.com/account/loanPerf.action?loan_id=70612164&order_id=" + note.orderId + "&note_id=" +note.id
              target="_blank"
            )
              = note.id
          td= note.age
          td= note.creditTrend
          td= note.grade
          td= note.intRate
          td= note.principle
          td= note.accruedInterest
          td= note.interestAccumulated
